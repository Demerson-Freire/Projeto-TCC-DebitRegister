<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tela2"
    tools:context=".views.BuscaCpfCompras">

    <EditText
        android:id="@+id/txtGetNomeClienteBuscaNomeCpfCompras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="144dp"
        android:ems="10"
        android:hint="Digite o nome do cliente."
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnBuscarNomeClienteNomeCpfCompras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="226dp"
        android:layout_marginEnd="84dp"
        android:fontFamily="sans-serif"
        android:text="Buscar"
        android:textStyle="bold"
        android:typeface="serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toEndOf="@+id/txtGetNomeClienteBuscaNomeCpfCompras"
        app:layout_constraintStart_toStartOf="@+id/txtGetNomeClienteBuscaNomeCpfCompras"
        tools:layout_editor_absoluteY="144dp" />

    <ListView
        android:id="@+id/txtListaNomeCpfCompras"
        android:layout_width="386dp"
        android:layout_height="378dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_corners_background"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtGetNomeClienteBuscaNomeCpfCompras"
        tools:layout_editor_absoluteX="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>